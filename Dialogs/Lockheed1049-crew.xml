    <text>
      <label></label>
    </text>

    <text>
      <label>Stowe seat</label>
    </text>

    <checkbox>
      <halign>left</halign>
      <label>Captain</label>
      <property>/systems/human/captain/stowe-norm</property>
      <binding>
       <command>nasal</command>
       <script>globals.Lockheed1049.doorsystem.seatexport("captain");</script>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Copilot</label>
      <property>/systems/human/copilot/stowe-norm</property>
      <binding>
       <command>nasal</command>
       <script>globals.Lockheed1049.doorsystem.seatexport("copilot");</script>
      </binding>
    </checkbox>

  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>

    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Menu</legend>
      <key>m</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Lockheed1049-menu</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>
