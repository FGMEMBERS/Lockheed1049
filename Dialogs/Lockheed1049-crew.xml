<?xml version="1.0"?>

<PropertyList>
  <name>Lockheed1049-crew</name>
  <layout>vbox</layout>

  <text>
    <label>Constellation crew</label>
  </text>

  <hrule><dummy/></hrule>

  <group>
    <layout>vbox</layout>

    <text>
      <label>Status</label>
    </text>

    <group>
     <layout>vbox</layout>
     <halign>left</halign>

     <group>
      <layout>hbox</layout>

      <group>
       <layout>vbox</layout>
       <halign>left</halign>

       <checkbox>
         <halign>left</halign>
         <label>Timeout of display  ~</label>
         <property>/controls/crew/timeout</property>
         <binding>
          <command>property-toggle</command>
          <property>/controls/crew/timeout</property>
         </binding>
       </checkbox>
      </group>

      <group>
       <layout>vbox</layout>
       <halign>left</halign>

       <input>
         <halign>left</halign>
         <property>/controls/crew/timeout-s</property>
         <label>seconds  ~</label>
         <binding>
          <command>dialog-apply</command>
         </binding>
       </input>
      </group>
     </group>
    </group>

    <text>
      <label></label>
    </text>

    <text>
      <label>Views</label>
      <halign>center</halign>
    </text>

    <group>
      <layout>hbox</layout>

      <group>
        <layout>vbox</layout>

        <checkbox>
          <halign>left</halign>
          <label>Gear well (floating)</label>
          <property>/systems/seat/gear-well</property>
          <binding>
           <command>nasal</command>
           <script>globals.Lockheed1049.seatsystem.viewexport("gear-well");</script>
          </binding>
          <binding>
           <command>dialog-update</command>
          </binding>
        </checkbox>
      </group>

      <group>
        <layout>vbox</layout>

        <checkbox>
          <halign>left</halign>
          <label>Recover position of last session  ~</label>
          <property>/controls/seat/recover</property>
          <binding>
           <command>nasal</command>
           <script>globals.Lockheed1049.seatsystem.recoverexport();</script>
          </binding>
        </checkbox>
      </group>

    </group>

