<?xml version="1.0"?>

<PropertyList>
  <name>Lockheed1049-menu</name>
  <modal>false</modal>
  <layout>vbox</layout>

  <text>
    <label>Constellation menu</label>
  </text>

  <hrule><dummy/></hrule>

  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend>Autopilot</legend>
      <key>a</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Lockheed1049-autopilot</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Crew</legend>
      <key>c</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Lockheed1049-crew</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Fuel</legend>
      <key>f</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Lockheed1049-fuel</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Ground</legend>
      <key>g</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Lockheed1049-ground</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Procedures</legend>
      <key>p</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Lockheed1049-procedures</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Radio</legend>
      <key>r</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Lockheed1049-radios</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Help</legend>
      <key>h</key>
      <binding>
       <command>nasal</command>
       <script>gui.showHelpDialog("/sim/help")</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <empty><stretch>true</stretch></empty>
  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label>press the first letter, or escape/return</label>
    <color>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
    </color>
  </text>

  <text>
    <label></label>
  </text>

  <text>
    <label>~  fields are saved on exit in aircraft-data</label>
    <color>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
    </color>
  </text>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <empty><stretch>true</stretch></empty>
  </group>
</PropertyList>
