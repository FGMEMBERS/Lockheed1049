<?xml version="1.0"?>

<PropertyList>
  <name>Lockheed1049-procedures2</name>
  <layout>vbox</layout>

  <text>
    <label>Constellation procedures</label>
  </text>

  <hrule><dummy/></hrule>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <text>
      <label>Settings</label>
    </text>

    <text>
      <label></label>
    </text>

    <text>
      <label></label>
    </text>

    <group>
     <layout>hbox</layout>

     <group>
      <layout>vbox</layout>

      <checkbox>
        <label>Copilot</label>
        <halign>left</halign>
        <property>/controls/copilot/activ</property>
        <binding>
         <command>nasal</command>
         <script>globals.Lockheed1049.copilotcrew.toggleexport();</script>
        </binding>
      </checkbox>

      <checkbox>
        <label>Engineer</label>
        <halign>left</halign>
        <property>/controls/engineer/activ</property>
        <binding>
         <command>nasal</command>
         <script>globals.Lockheed1049.engineercrew.toggleexport();</script>
        </binding>
      </checkbox>
     </group>

     <group>
      <layout>vbox</layout>

      <text>
       <label>AI</label>
      </text>

      <text>
       <label></label>
      </text>

      <checkbox>
        <label>adjusts night lighting  ~</label>
        <halign>left</halign>
        <property>/controls/crew/night-lighting</property>
        <binding>
         <command>property-toggle</command>
         <property>/controls/crew/night-lighting</property>
        </binding>
      </checkbox>

      <text>
       <label></label>
      </text>

      <checkbox>
        <label>performs Captain checks (not real)  ~</label>
        <halign>left</halign>
        <property>/controls/crew/captain-busy</property>
        <binding>
         <command>property-toggle</command>
         <property>/controls/crew/captain-busy</property>
        </binding>
      </checkbox>

      <text>
        <label></label>
      </text>

      <text>
        <label>Night lighting</label>
        <halign>center</halign>
      </text>

      <group>
       <layout>vbox</layout>
       <halign>left</halign>

       <text>
        <label>Panels</label>
       </text>

       <slider>
         <label>pilot  ~</label>
         <row>0</row>
         <col>2</col>
         <min>0</min>
         <max>1</max>
         <property>/controls/human/lighting/pilot</property>
         <binding>
           <command>dialog-apply</command>
         </binding>
         <binding>
          <command>nasal</command>
          <script>globals.Lockheed1049.engineercrew.pilotlightingexport();</script>
         </binding>
       </slider>

       <slider>
         <label>copilot  ~</label>
         <row>0</row>
         <col>2</col>
         <min>0</min>
         <max>1</max>
         <property>/controls/human/lighting/copilot</property>
         <binding>
           <command>dialog-apply</command>
         </binding>
         <binding>
          <command>nasal</command>
          <script>globals.Lockheed1049.copilotcrew.lightingexport();</script>
         </binding>
       </slider>

       <slider>
         <label>engineer  ~</label>
         <row>0</row>
         <col>2</col>
         <min>0</min>
         <max>1</max>
         <property>/controls/human/lighting/engineer</property>
         <binding>
           <command>dialog-apply</command>
         </binding>
         <binding>
          <command>nasal</command>
          <script>globals.Lockheed1049.engineercrew.lightingexport();</script>
         </binding>
       </slider>
      </group>
    </group>

  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <group>
   <layout>hbox</layout>

   <button>
    <legend>Close</legend>
    <default>true</default>
    <key>Esc</key>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>

  </group>
</PropertyList>
