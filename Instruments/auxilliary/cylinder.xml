<?xml version="1.0"?>

<PropertyList>

<path>cylinder.ac</path>

<animation>
  <type>rotate</type>
  <object-name>CenterTankLever</object-name>
  <property>controls/fuel/tank[4]/shut-off</property>
  <factor>70</factor>
  <offset-deg>-35</offset-deg>   
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>CenterTankLever</object-name>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-adjust</command>
    <property>controls/fuel/tank[4]/shut-off</property>
    <step>-1</step>
    <min>0</min>
    <max>1</max>
    <wrap>0</wrap>
   </binding>
  </action>
  <action>
   <button>1</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-adjust</command>
    <property>controls/fuel/tank[4]/shut-off</property>
    <step>1</step>
    <min>0</min>
    <max>1</max>
    <wrap>0</wrap>
   </binding>
  </action>
 </animation>

