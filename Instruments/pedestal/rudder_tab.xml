<?xml version="1.0"?>

<PropertyList>

<path>rudder_tab.ac</path>

 <animation>
  <name>AllRudderTab</name>
  <object-name>RudderTab</object-name>
  <object-name>RudderTabCursor</object-name>
 </animation>

 <animation>
  <type>material</type>
  <object-name>AllRudderTab</object-name>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>1.0</blue>
   <factor-prop>controls/lighting/internal/pedestal/on</factor-prop>
  </emission> 
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>RudderTab</object-name>
  <property>controls/flight/rudder-trim</property>
  <factor>-4680</factor>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>RudderTab</object-name>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-adjust</command>
    <property>controls/flight/rudder-trim</property>
    <step>0.003</step>
    <min>-1</min>
    <max>1</max>
    <wrap>0</wrap>
   </binding>
  </action>
  <action>
   <button>1</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-adjust</command>
    <property>controls/flight/rudder-trim</property>
    <step>-0.003</step>
    <min>-1</min>
    <max>1</max>
    <wrap>0</wrap>
   </binding>
  </action>
 </animation>

</PropertyList>

