<?xml version="1.0"?>

<PropertyList>

<path>servo.ac</path>

 <animation>
  <type>material</type>
  <object-name>ServoPlate</object-name>
  <condition>
   <or>
    <not>
     <property>/sim/rendering/rembrandt/enabled</property>
    </not>
    <less-than-equals>
     <property>/sim/rendering/shaders/lights</property>
     <value>0.0</value>
    </less-than-equals>
   </or>
  </condition>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>1.0</blue>
   <factor-prop>controls/lighting/internal/pedestal/on</factor-prop>
  </emission> 
 </animation>

</PropertyList>

