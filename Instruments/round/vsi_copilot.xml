<PropertyList>

<path>vsi.ac</path>

<animation>
  <type>material</type>
  <object-name>VSI.Face</object-name>
  <object-name>VSI.Needle</object-name>
  <emission>
    <red>0.81</red>
    <green>0.40</green>
    <blue>0.20</blue>
    <factor-prop>systems/lighting/internal/copilot/instrument-light</factor-prop>
  </emission>
  <ambient>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>systems/lighting/internal/ambient-light</factor-prop>
  </ambient>
</animation>

<animation>
  <type>rotate</type>
  <object-name>VSI.Needle</object-name>
  <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
  <min>-6000.0</min>
  <max>6000.0</max>
  <scale>1.0</scale>
  <interpolation>
    <entry><ind>-6000</ind><dep>-170</dep></entry>
    <entry><ind>-4000</ind><dep>-125</dep></entry>
    <entry><ind>-2000</ind><dep>-80</dep></entry>
    <entry><ind>-1000</ind><dep>-40</dep></entry>
    <entry><ind>    0</ind><dep>  0</dep></entry>
    <entry><ind> 1000</ind><dep> 40</dep></entry>
    <entry><ind> 2000</ind><dep> 80</dep></entry>
    <entry><ind> 4000</ind><dep>125</dep></entry>
    <entry><ind> 6000</ind><dep>170</dep></entry> 
  </interpolation>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

</PropertyList>
