<?xml version="1.0"?>

<PropertyList>

<path>steering.ac</path>

 <animation>
  <type>rotate</type>
  <object-name>SteeringWheel</object-name>
  <condition>
   <property>controls/crew/steering/wheel</property>
  </condition>
  <property>controls/flight/rudder</property>
  <factor>-540</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

</PropertyList>

