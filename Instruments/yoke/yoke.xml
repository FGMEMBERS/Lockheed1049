<?xml version="1.0"?>

<PropertyList>

<path>yoke.ac</path>

 <animation>
  <type>rotate</type>
  <object-name>YokePillar</object-name>
  <object-name>Yoke</object-name>
  <property>controls/flight/elevator</property>
  <factor>-5</factor>
  <offset-deg>-5</offset-deg>      <!-- avoids bump into seat --> 
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Yoke</object-name>
  <property>controls/flight/aileron</property>
  <factor>-90</factor>
  <offset-deg>0</offset-deg>   
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.661</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

</PropertyList>

