<?xml version="1.0"?>

<!-- visiblility is left forwards.

     References :
     ==========
     http://en.wikipedia.org/wiki/Navigation_light
-->

<PropertyList>

<path>navigation.ac</path>

 <animation>
  <type>scale</type>
  <object-name>NavigationLeft</object-name>
  <property>sim/time/sun-angle-rad</property>
  <x-min>1</x-min>
  <y-min>1</y-min>
  <z-min>1</z-min>
  <x-offset>-1.4</x-offset>
  <y-offset>-1.4</y-offset>
  <z-offset>-1.4</z-offset>
  <x-factor>2</x-factor>
  <y-factor>2</y-factor>
  <z-factor>2</z-factor>
 </animation>

 <animation>
  <type>noshadow</type>
  <object-name>NavigationLeft</object-name>
 </animation>

 <animation>
  <type>material</type>
  <object-name>NavigationLeft</object-name>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>1.0</blue>
   <factor-prop>instrumentation/generic/factor</factor-prop>
  </emission> 
 </animation>

 <animation>
  <type>select</type>
  <object-name>NavigationLeft</object-name>
  <condition>
   <and>
    <property>controls/lighting/external/navigation/on</property>
    <or>
     <and>
      <not>
       <property>controls/lighting/external/navigation/ground-loading</property>
      </not>
      <not>
       <property>controls/lighting/external/navigation/steady</property>
      </not>
      <not>
       <property>controls/lighting/flash/state</property>
      </not>
     </and>
     <and>
      <not>
       <property>controls/lighting/external/navigation/ground-loading</property>
      </not>
      <property>controls/lighting/external/navigation/steady</property>
     </and>
     <property>controls/lighting/external/navigation/ground-loading</property>
    </or>
   </and>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>NavigationRight</object-name>
  <object-name>NavigationTail</object-name>
  <condition>
   <equals>
    <value n="0">1</value>
    <value n="1">0</value>
   </equals>
  </condition>
 </animation>

<!-- rotation because of directional flash -->

 <animation>
  <type>rotate</type>
  <object-name>NavigationLeft</object-name>
  <offset-deg>-30</offset-deg>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>

 <animation>
  <type>flash</type>
  <object-name>NavigationLeft</object-name>
  <axis>
   <x>-1</x>
   <y>-1</y>
   <z>0</z>
  </axis>
  <power>4</power>
  <factor>1</factor>
  <offset>0.4</offset>   <!-- 120 degrees -->
  <two-sides type="bool">false</two-sides>
  <min>0.01</min>
  <max>1</max>
 </animation>

</PropertyList>

