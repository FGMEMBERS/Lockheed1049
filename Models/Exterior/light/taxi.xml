<?xml version="1.0"?>

<PropertyList>

<path>taxi.ac</path>

 <animation>
  <type>noshadow</type>
  <object-name>TaxiLight</object-name>
 </animation>

 <animation>
  <type>material</type>
  <object-name>TaxiLight</object-name>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>1.0</blue>
   <factor-prop>instrumentation/generic/factor</factor-prop>
  </emission> 
 </animation>

 <animation>
  <type>select</type>
  <object-name>TaxiLight</object-name>
  <condition>
   <and>
    <property>controls/lighting/external/taxi/on</property>
    <not>
     <property>controls/lighting/external/taxi/passing</property>
    </not>
   </and>
  </condition>
 </animation>

</PropertyList>

