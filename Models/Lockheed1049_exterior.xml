<!-- REGISTRATION -->

  <text>
   <name>Registration fin right</name>
   <type type="string">text-value</type>
   <property type="string">sim/model/immat</property>
   <format type="string">%s</format>
   <draw-text type="bool">true</draw-text>
   <font>Helvetica.txf</font>
   <character-size type="double">0.5</character-size>
   <character-aspect-ratio type="double">1.1</character-aspect-ratio>        <!-- compress -->
   <max-height>32</max-height>
   <max-width>80</max-width>
   <font-resolution>
    <width type="int">32</width>
    <height type="int">32</height>
   </font-resolution>
   <alignment>center-center</alignment>
   <axis-alignment>reversed-xz-plane</axis-alignment>
   <offsets>
    <x-m> 15.235</x-m>
    <y-m> 6.340</y-m>
    <z-m> 3.035</z-m>
   </offsets>
  </text>

  <text>
   <name>Registration fin left</name>
   <type type="string">text-value</type>
   <property type="string">sim/model/immat</property>
   <format type="string">%s</format>
   <draw-text type="bool">true</draw-text>
   <font>Helvetica.txf</font>
   <character-size type="double">0.5</character-size>
   <character-aspect-ratio type="double">1.1</character-aspect-ratio>      <!-- compress -->
   <max-height>32</max-height>
   <max-width>80</max-width>
   <font-resolution>
    <width type="int">32</width>
    <height type="int">32</height>
   </font-resolution>
   <alignment>center-center</alignment>
   <axis-alignment>xz-plane</axis-alignment>
   <offsets>
    <x-m> 15.285</x-m>
    <y-m>-6.330</y-m>
    <z-m> 3.005</z-m>
   </offsets>
  </text>

  <animation>
   <name>TWA registration</name>
   <object-name>Registration fin left</object-name>
   <object-name>Registration fin right</object-name>
  </animation>

  <animation>
   <type>material</type>
   <object-name>TWA registration</object-name>
   <emission>
    <red>0</red>
    <green>0</green>
    <blue>0</blue>
   </emission>
   <ambient>
    <red>1</red>
    <green>0</green>
    <blue>0</blue>
   </ambient>
   <diffuse>
    <red>1</red>
    <green>0</green>
    <blue>0</blue>
   </diffuse>
  </animation>

  <animation>
   <type>select</type>
   <object-name>TWA registration</object-name>
   <condition>
    <equals>
     <property>sim/model/livery/index</property>
     <value>1</value>
    </equals>
   </condition>
  </animation>

</PropertyList>
