<?xml version="1.0"?>

<PropertyList>

   <key n="1">
    <name>Ctrl-A</name>
    <desc>Toggle autopilot altitude lock.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.autopilotsystem.apaltitudeexport();</script>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/instrumentation/generic/click</property>
    </binding>
   </key>

   <key n="2">
    <name>Ctrl-B</name>
    <desc>Propeller reverse</desc>
    <binding>
     <command>property-toggle</command>
     <property>/controls/engines/engine[0]/reverser</property>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/controls/engines/engine[1]/reverser</property>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/controls/engines/engine[2]/reverser</property>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/controls/engines/engine[3]/reverser</property>
    </binding>
   </key>

   <key n="5">
    <name>Ctrl-E</name>
    <desc>Toggle engineer/captain view</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.seatsystem.viewexport("engineer");</script>
    </binding>
   </key>

   <key n="6">
    <name>Ctrl-F</name>
    <desc>Surface control boost</desc>
    <binding>
     <command>property-toggle</command>
     <property>/controls/flight/elevator-boost</property>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/controls/flight/aileron-boost</property>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/controls/flight/rudder-boost</property>
    </binding>
   </key>

   <key n="8">
    <name>Ctrl-H</name>
    <desc>Toggle autopilot heading lock.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.autopilotsystem.apexport();</script>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/instrumentation/generic/click</property>
    </binding>
   </key>

   <key n="11">
    <name>Ctrl-K</name>
    <desc>Toggle observer view.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.seatsystem.viewexport("observer");</script>
    </binding>
   </key>

   <key n="12">
    <name>Ctrl-L</name>
    <desc>Toggle observer 2 view.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.seatsystem.viewexport("observer2");</script>
    </binding>
   </key>

   <key n="14">
    <name>Ctrl-N</name>
    <desc>Toggle navigator view.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.seatsystem.viewexport("navigator");</script>
    </binding>
   </key>

   <key n="15">
    <name>Ctrl-O</name>
    <desc>Toggle radio view.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.seatsystem.viewexport("radio");</script>
    </binding>
   </key>

   <key n="16">
    <name>Ctrl-P</name>
    <desc>Toggle pitch hold.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.autopilotsystem.apexport();</script>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/instrumentation/generic/click</property>
    </binding>
   </key>

   <key n="17">
    <name>Ctrl-Q</name>
    <desc>Toggle virtual crew</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.copilotcrew.togglecrewexport();</script>
    </binding>
   </key>

   <key n="19">
    <name>Ctrl-S</name>
    <desc>Toggle autothrottle</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.copilotcrew.throttleexport();</script>
    </binding>
   </key>

   <key n="22">
    <name>Ctrl-V</name>
    <desc>Select initial view (view 0).</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.seatsystem.viewexport("captain");</script>
    </binding>
    <mod-shift>
     <desc>Restore view pitch</desc>
     <binding>
      <command>nasal</command>
      <script>globals.Lockheed1049.seatsystem.restorepitchexport();</script>
     </binding>
    </mod-shift>
   </key>

   <key n="24">
    <name>Ctrl-X</name>
    <mod-shift>
     <desc>Restore floating view</desc>
     <binding>
      <command>nasal</command>
      <script>globals.Lockheed1049.seatsystem.restoreexport();</script>
     </binding>
    </mod-shift>
   </key>

   <key n="25">
    <name>Ctrl-Y</name>
    <desc>Toggle copilot view.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.seatsystem.viewexport("copilot");</script>
    </binding>
   </key>

   <key n="61">
    <name>=</name>
    <desc>Menu</desc>
    <binding>
     <command>dialog-show</command>
     <dialog-name>Lockheed1049-menu</dialog-name>
    </binding>
   </key>

   <key n="86">
    <name>V</name>
    <desc>Scroll in reverse through views.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.seatsystem.scrollreverseexport();</script>
    </binding>
   </key>

   <key n="102">
    <name>f</name>
    <desc>full cockpit</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.seatsystem.fullexport();</script>
    </binding>
   </key>

   <key n="113">
    <name>q</name>
    <desc>reset speed-up.</desc>
    <binding>
     <command>property-assign</command>
     <property>/sim/speed-up</property>
     <value>1</value>
    </binding>
   </key>

   <key n="118">
    <name>v</name>
    <desc>Cycle view</desc>
    <desc>Scroll through views.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Lockheed1049.seatsystem.scrollexport();</script>
    </binding>
   </key>

   <key n="268">
    <name>F12</name>
    <desc>Radio dialog.</desc>
    <binding>
     <command>dialog-show</command>
     <dialog-name>Lockheed1049-radios</dialog-name>
    </binding>
   </key>

   <key n="357">
    <name>Up</name>
    <desc>Increase autopilot pitch (slow) or move floating view front (fast)</desc>
    <mod-ctrl>
     <binding>
      <command>nasal</command>
      <script>
       if( !globals.Lockheed1049.seatsystem.movelengthexport(-0.1) ) {
           if( !globals.Lockheed1049.autopilotsystem.pitchexport(1.0) ) {
               # default
           }
       }
      </script>
     </binding>
    </mod-ctrl>
   </key>

   <key n="359">
    <name>Down</name>
    <desc>Decrease autopilot pitch (slow) or move floating view aft (fast)</desc>
    <repeatable type="bool">true</repeatable>
    <mod-ctrl>
     <binding>
      <command>nasal</command>
      <script>
       if( !globals.Lockheed1049.seatsystem.movelengthexport(0.1) ) {
           if( !globals.Lockheed1049.autopilotsystem.pitchexport(-1.0) ) {
               # default
           }
       }
      </script>
     </binding>
    </mod-ctrl>
   </key>

</PropertyList>
