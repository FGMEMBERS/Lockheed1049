<?xml version="1.0"?>

<!-- Lockheed 1049 autopilot altitude switch :

     must enable autopilot.
-->

<PropertyList>

 <name>Altitude control switch</name>
 <w-base>52</w-base>
 <h-base>52</h-base>

 <layers>

  <layer>
   <name>altitude switch</name>
   <type>switch</type>

   <layer>
    <condition>
     <equals>
      <property>/autopilot/locks/altitude</property>
      <value>altitude-hold</value>
     </equals>
    </condition>
    <name>on</name>
    <texture>
     <path>Aircraft/Lockheed1049/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
     <type>y-shift</type>
     <offset>3</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>off</name>
    <texture>
     <path>Aircraft/Lockheed1049/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
     </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title abbreviation</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ALT CTRL</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-43</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>35</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>altitude hold</name>
   <button>0</button>
   <x>-22</x>
   <y>-19</y>
   <w>44</w>
   <h>44</h>
   <binding>
    <command>nasal</command>
    <script>globals.Lockheed1049.autopilotsystem.apaltitudeexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
