<?xml version="1.0"?>

<!-- Lockheed 1049 deviation indicator switch.
-->

<PropertyList>

 <name>Deviation indicator switch</name>
 <w-base>156</w-base>
 <h-base>52</h-base>

 <params>
  <frequency-select>/instrumentation/deviation-indicator/frequency</frequency-select>
 </params>


 <layers>

  <layer>
   <name>pointer switch</name>
   <type>switch</type>

   <layer>
    <condition>
     <not-equals>
      <property alias="../../../../../../params/frequency-select"/>
      <value>2</value>
     </not-equals>
    </condition>
    <name>on</name>
    <texture>
     <path>Aircraft/Lockheed1049/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>3</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>off</name>
    <texture>
     <path>Aircraft/Lockheed1049/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
     </transformation>
     <transformation>
      <type>rotation</type>
      <offset>-90</offset>
     </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title left</name>
   <type>text</type>
   <point-size>20</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>1</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-62</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-5</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title right</name>
   <type>text</type>
   <point-size>20</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>2</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>42</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-5</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Frequency 1</name>
   <button>0</button>
   <condition>
    <equals>
     <property alias="../../../../../params/frequency-select"/>
     <value>2</value>
    </equals>
   </condition>
   <x>-25</x>
   <y>-23</y>
   <w>44</w>
   <h>44</h>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/frequency-select"/>
    <value>1</value>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Frequency 2</name>
   <button>0</button>
   <condition>
    <not-equals>
     <property alias="../../../../../params/frequency-select"/>
     <value>2</value>
    </not-equals>
   </condition>
   <x>-25</x>
   <y>-23</y>
   <w>44</w>
   <h>44</h>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/frequency-select"/>
    <value>2</value>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
