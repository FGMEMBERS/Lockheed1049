    <layer>
     <name>Needle VOR 2 out of range</name>
     <texture>
      <path>Aircraft/Lockheed1049/Panels/Instruments/Textures/misc-1.rgb</path>
      <x1>0.8671875</x1>
      <y1>0.25</y1>
      <x2>0.921875</x2>
