<!-- VOR 2 tip -->

  <layer>
   <name>Needle tip 2</name>
   <type>switch</type>

   <layer>
    <name>VOR 2 tip</name>
    <type>switch</type>
    <condition>
     <not-equals>
      <property>/instrumentation/radio-magnetic-indicator/frequency[1]</property>
      <value>adf</value>
     </not-equals>
    </condition>

    <layer>
     <name>Needle tip VOR 2</name>
     <condition>
      <and>
       <property>/instrumentation/nav[1]/in-range</property>
       <not>
        <property>/instrumentation/nav[1]/has-gs</property>
       </not>
      </and>
     </condition>
     <w>16</w>
     <h>16</h>
     <texture>
      <path>Aircraft/Lockheed1049/Panels/Instruments/Textures/hsi2.rgb</path>
      <x1>0.8465625</x1>
      <x2>0.948125</x2>
      <y1>0.449375</y1>
      <y2>0.5375</y2>
     </texture>
     <transformations>
      <transformation>
       <type>rotation</type>
       <property>/instrumentation/nav[1]/heading-deg</property>
       <min>-360</min>
